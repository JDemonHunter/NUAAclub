<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="25dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:padding="10dp"
    android:descendantFocusability="blocksDescendants"
    >
        <Button
            android:id="@+id/essaySender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="发件人"
            android:textSize="20sp" />
        <TextView
            android:ellipsize="end"
            android:lines="3"
            android:id="@+id/essayContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正文"
            android:textSize="15sp"
            android:layout_below="@id/essaySender"
            />
        <TextView
            android:id="@+id/createTime_New"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/essaySender"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:text="发送时间"
            />
        <TextView
            android:id="@+id/replyFloorSymbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/createTime_New"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="100dp"
            android:text="#:"
            />
        <TextView
            android:id="@+id/replyFloor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/replyFloorSymbol"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:text="NaN"
            />

        <Button
            android:id="@+id/deleteBtn"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_below="@id/replyFloorSymbol"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="15dp"
            android:text="删除"
            android:textSize="10sp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/replyBtn"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_below="@id/deleteBtn"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="10dp"
            android:text="回复"
            android:textSize="10sp" />
</RelativeLayout>
